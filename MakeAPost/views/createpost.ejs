<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Home Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="flex h-screen bg-gray-100 text-gray-900">

  <!-- Sidebar -->
  <aside class="w-64 bg-gray-900 text-white flex flex-col justify-between p-6">
    <div>
      <!-- Site Name -->
      <h1 class="text-2xl font-bold mb-10">ğŸŒŸ MakeAPost</h1>

      <!-- User Profile -->
      <div class="flex flex-col items-center text-center mb-10">
        <a href="/profile">
          <img src="/images/uploads/<%=user.profilepic%>"" alt="User" class="w-20 h-20 rounded-full border-4 border-pink-500 shadow-lg mb-2" />
        </a>
        <h2 class="text-lg font-semibold"><%= user.username %></h2>
      </div>

      <!-- Nav Links -->
      <nav class="space-y-4">
        <a href="/home/allposts" class="block py-2 px-4 rounded hover:bg-gray-800">ğŸ  Posts</a>
        <a href="/home/createpost" class="block py-2 px-4 rounded hover:bg-gray-800">ğŸ“ Create One</a>
        <a href="/home/createpost" class="block py-2 px-4 rounded hover:bg-gray-800">ğŸ“Š You Posts</a>
        
      </nav>
    </div>

    <!-- Footer or logout button -->
    <div>
      <a href="/logout" class="w-full py-2 px-4 bg-red-600 hover:bg-red-700 rounded text-white font-semibold">Logout</a>
    </div>
  </aside>

  <!-- Main Content -->
  <main class="flex-1 p-10 overflow-y-auto ">
    <h1 class="text-3xl font-bold mb-4">Create Post</h1>
    <p class="text-gray-600 mb-4">You can start building your content here.</p>
    <!-- Add your main content here -->
     <div class="lg:w-2/4">
        <form action="/home/create" method="post">
            <textarea type="text" name="content" class="w-full px-4 py-3 mb-4 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition duration-200 resize-none" placeholder="what you thought today?"></textarea>
            <input type="submit" class="w-full bg-gradient-to-r from-indigo-500 to-purple-600 text-white font-semibold py-3 rounded-lg hover:opacity-90 transition duration-200 cursor-pointer" value="Create post">
        </form>
     </div>

     <div>
      <h3 class="text-yellow-600 mt-16 mb-4">Your Post...</h3>

      <% user.posts.reverse().forEach(function(post){ %>
        
        <div class="lg:w-2/4  mb-2 w-full bg-white border border-zinc-100 rounded-xl shadow-custom-light hover:shadow-custom-hover transition-shadow duration-300 p-6 space-y-4">
          <div class="flex items-center space-x-3">
            <h3 class="text-base font-semibold text-blue-500">@<%=user.username %></h3>
          </div>
          <p class="text-zinc-500 leading-relaxed">
            <%= post.content %>
          </p>
  
          <div class="flex justify-between pt-2  mt-4">
            <a href="/home/createpost/edit/<%=post._id%>" class="text-sm text-green-600 hover:text-green-700  transition-colors">Edit Post</a>
            <a href="/home/createpost/delete/<%=post._id%>" class="text-sm text-red-500 hover:text-red-600  transition-colors">Delete</a>
          </div>
        </div>
  
      <%}) %>
     
     </div>
  </main>

</body>
</html>
